.col-sm-6.col-md-4.card-container
  .thumbnail.card-photo
    = image_tag image
      alt="#{title}"

    .caption
      h3 #{title}
      div.card-description
        = yield
      p
    .button-container
      a.btn.btn-primary target="_new" href="#{link}" role="button"
        i.icon.icon-camera>
        = link_text
